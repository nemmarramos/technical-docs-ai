{
  "name": "technical-docs-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Technical Docs AI - RAG system with React frontend",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/rag-engine & npm run dev --workspace=packages/frontend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/rag-engine",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:backend": "npm run build --workspace=packages/rag-engine",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "install:all": "npm install"
  },
  "keywords": [
    "rag",
    "llm",
    "ai",
    "documentation",
    "react",
    "monorepo"
  ],
  "author": "Nemmar Ramos <nemmar.ramos@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
